<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="110dp">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="115dp">

        <ImageView
            android:id="@+id/chat_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_toStartOf="@+id/chat_message"
            android:layout_toLeftOf="@+id/chat_message"
            android:src="@color/googleRed" />

        <TextView
            android:id="@+id/chat_name"
            android:layout_width="97dp"
            android:layout_height="33dp"
            android:layout_below="@+id/chat_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="25dp"
            android:layout_toStartOf="@+id/chat_message"
            android:layout_toLeftOf="@+id/chat_message"
            android:text="Joe Doe"
            android:textSize="9pt"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/chat_message"
            android:layout_width="261dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="0dp"
            android:text="Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet."
            android:textSize="11pt" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>